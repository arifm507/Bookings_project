<div class="container">
<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Route Name</th>
      <th>Number of seats</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure time</th>
      <th>Arrival time</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.route_name %></td>
        <td><%= route.number_of_seats %></td>
        <td><%= route.origin %></td>
        <td><%= route.destination %></td>
        <td><%= route.departure_time.to_s(:time)%></td>
        <td><%= route.arrival_time.to_s(:time) %></td>
        <td><%= route.duration %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Route', new_route_path %>
</div>